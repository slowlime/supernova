language core;

extend with #nullary-functions;
extend with #multiparameter-functions;
extend with #structural-patterns;
extend with #pattern-ascriptions;
extend with #nested-function-declarations;
extend with #unit-type;

fn check() -> Unit {
  fn not-bool-is-bool(x : Bool) -> Bool {
    //!~ ERROR
    return not(x)
  }

  fn not-bool-is-not-nat(x : Bool) -> Nat {
    //! ERROR(sema::expr_type_mismatch)
    return not(x)
  }

  return unit
}

fn infer() -> Unit {
  //!~ ERROR
  return match not(false) { _ as Bool => unit }
}

fn illegal-arg() -> Unit {
  fn check() -> Bool {
    //! ERROR(sema::expr_type_mismatch)
    return not(0)
  }

  fn infer() -> Unit {
    //! ERROR(sema::expr_type_mismatch)
    return match not(0) { _ => unit }
  }

  return unit
}

fn wrong-arg-count() -> Unit {
  fn check() -> Unit {
    fn zero() -> Bool {
      //! ERROR(sema::wrong_arg_count)
      return not()
    }

    fn two() -> Bool {
      //! ERROR(sema::wrong_arg_count)
      return not(false, true)
    }

    return unit
  }

  fn infer() -> Unit {
    fn zero() -> Unit {
      //! ERROR(sema::wrong_arg_count)
      return match not() { _ => unit }
    }

    fn two() -> Unit {
      //! ERROR(sema::wrong_arg_count)
      return match not(true, false) { _ => unit }
    }

    return unit
  }

  return unit
}

fn main(x : Nat) -> Nat {
  return x
}
