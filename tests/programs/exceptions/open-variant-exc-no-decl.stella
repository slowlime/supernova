fn throw-requires-decl(x : Unit) -> Unit {
  //! ERROR(sema::exception_ty_not_declared)
  return throw(x)
}

fn try-catch-requires-decl(x : Unit) -> Unit {
  return try {
    x
  } catch {
    //! ERROR(sema::exception_ty_not_declared)
    y => y
  }
}

fn try-with-does-not-require-decl(x : Unit) -> Unit {
  //!~ ERROR
  return try { x } with { x }
}

fn main(x : Nat) -> Nat {
  return x
}
